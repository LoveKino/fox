{
    "manifest_version": 2,
    "minimum_chrome_version": "40",
    "name": "字段配置从package.json中读取",
    "version": "字段配置从package.json中读取",
    "description": "页面行为录制，页面性能监控。",
    "icons": {
        "16": "image/icon/app-16.png",
        "32": "image/icon/app-32.png",
        "48": "image/icon/app-48.png",
        "128": "image/icon/app-128.png"
    },
    "browser_action": {
        "default_icon": "image/icon/app-128.png",
        "default_title": "字段配置从package.json中读取"
    },
    "homepage_url": "字段配置从package.json中读取",
    "options_page": "page/options/main.html",
    "author": "字段配置从package.json中读取",
    "background": {
        "page": "page/background/main.html",
        "persistent": true
    },
    "permissions": [
        "tabs",
        "debugger",
        "*://*/",
        "http://*/",
        "https://*/",
        "<all_urls>",
        "webRequest",
        "webRequestBlocking",
        "webNavigation"
    ],
    "web_accessible_resources": [
        "*"
    ],
    "devtools_page": "page/dashboard/loader.html"
}
