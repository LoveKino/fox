{
    "name": "Fox-Cloud-Server",
    "version": "0.2.1",
    "description": "Fox cloud server.",
    "main": "index.js",
    "scripts": {
        "start": "node ./index.js",
        "eslint": "./node_modules/.bin/eslint common module index.js"
    },
    "private": true,
    "author": "soulteary",
    "license": "MIT",
    "homepage": "https://github.com/soulteary/fox/tree/cloud-server",
    "eslintConfig": {
        "rules": {
            "indent": [
                2,
                4,
                {
                    "SwitchCase": 1
                }
            ],
            "quotes": [
                2,
                "single"
            ],
            "linebreak-style": [
                2,
                "unix"
            ],
            "semi": [
                2,
                "always"
            ],
            "no-trailing-spaces": 2,
            "space-before-function-paren": [
                2,
                "always"
            ],
            "eqeqeq": [
                2,
                "allow-null"
            ],
            "no-console": 0
        },
        "env": {
            "node": true
        },
        "extends": "eslint:recommended"
    },
    "devDependencies": {
        "eslint": "^2.1.0"
    }
}
